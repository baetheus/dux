{
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "allowUnreachableCode": true,
    "noImplicitAny": true,
    "noErrorTruncation": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "lib": ["es2015"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
