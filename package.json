{
  "name": "@nll/dux",
  "version": "8.0.0-prerelease.5",
  "description": "Flux and flux-like tools",
  "main": "lib/index.js",
  "module": "es6/index.js",
  "files": [
    "lib",
    "es6",
    "src"
  ],
  "scripts": {
    "build-es6": "tsc",
    "build-lib": "tsc --build tsconfig.lib.json",
    "build": "npm run build-es6 && npm run build-lib",
    "coveralls": "cat ./coverage/lcov.info | npx coveralls",
    "docs": "npx docs-ts",
    "jest-clear-cache": "jest --clearCache",
    "jest": "jest --ci",
    "prepublishOnly": "npm run build",
    "release": "npm run test && npm run build && npm run docs && npx standard-version",
    "test": "npm run jest-clear-cache && npm run jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nullpub/dux.git"
  },
  "keywords": [
    "redux",
    "ngrx",
    "flux"
  ],
  "author": "Brandon Blaylock <brandon@null.pub> (https://blaylock.dev)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/nullpub/dux/issues"
  },
  "homepage": "https://github.com/nullpub/dux#readme",
  "dependencies": {
    "@nll/datum": "~2.7.1",
    "fp-ts": "~2.5.2",
    "monocle-ts": "~2.1.0",
    "rxjs": "~6.5.4"
  },
  "devDependencies": {
    "@types/jest": "~25.1.3",
    "@types/node": "~12.12.28",
    "coveralls": "~3.0.9",
    "docs-ts": "~0.3.4",
    "jest": "~25.1.0",
    "prettier": "~1.19.1",
    "standard-version": "~7.1.0",
    "ts-jest": "~25.0.0",
    "typescript": "~3.8.2"
  }
}
